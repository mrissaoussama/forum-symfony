{% block search %}
<li class="nav-item">
  <form method='GET' class="form-inline my-2 my-lg-0" action="{{path('post_index')}}" class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Search" name="searchvalue">
    </li>
<li class="nav-item">
  {% if categories is defined %}  
  <select class="form-select" name="categorie" onchange="this.form.submit()">
    <option value="">All
    </option>
    {% for categorie in categories %}
    <option value='{{categorie.id}}'>{{categorie.label}}
    </option>
    {% endfor %}
  </select>
  {% else %}
  <input type="hidden" value="" name="categorie">
  {% endif %}
  <input class="btn btn-outline-success" name="search" id="searchsubmit" value="Search" type="submit">
</form> 
</li>
{% endblock %}
