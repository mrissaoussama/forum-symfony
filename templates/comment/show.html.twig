{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ comment.file }}</td>
            </tr>
            <tr>
                <th>Commentdate</th>
                <td>{{ comment.commentdate ? comment.commentdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ comment.likes ? comment.likes|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Isdeleted</th>
                <td>{{ comment.isdeleted }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
